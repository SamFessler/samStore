@model IEnumerable<samStore.Models.ProductModel>
@{
    ViewBag.Title = "Trees";
}

    <div class="row">
        <div class="col-xs-12">
            @for (int i = 0; i < Model.Count(); i++)
                {
                <div class="col-xs-4 well">
                    <h3 class="site-title">@Model.ElementAt(i).TreeName</h3>
                    <img style="max-width:100%; max-height:100%" src="@Model.ElementAt(i).TreeImage.FirstOrDefault()" />
                    <p>@Model.ElementAt(i).TreeDescription</p>
                    <div class="row well" style="background: #F2D9B2;">
                        <div class="col-xs-5">
                            <p>@Model.ElementAt(i).TreePrice.Value.ToString("C")</p>
                        </div>
                        <div class="col-xs-5">
                            @Html.ActionLink("View Details", "Index", "Product", new { ID = Model.ElementAt(i).Id }, new { @class = "btn" })
                        </div>
                    </div>
                </div>
                }
        </div>
    </div>

