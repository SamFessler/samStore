<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Art Of Bonsai</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar-simple">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-simple" >
                
                <ul class="nav navbar-nav " link="#A72C23;">
                    <li  id="titleLinks" link="#A72C23;"><span class="Logos">@Html.ActionLink("E", "Index", "Home", new { area = "" }, new { @class = "Logos", @style = "color:#737B26" })</span></li>
                    <li  id="titleLinks"  link="#A72C23;">@Html.ActionLink("About", "About", "Home", null, new { @style = "color: #A72C23;" })</li>
                    <li  id="titleLinks"  link=";">@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color: #A72C23;" })</li>
                    <li  id="titleLinks" >@Html.ActionLink("Trees","Trees","Home", new { @style = "color: #A72C23;" }, null)</li>
                    
                </ul>

                @Html.Partial("_Cart")
            </div>
        </div>
    </div>

    <div class="container body-content">
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TreeArt Studios</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
